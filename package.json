{
    "name": "vscode-erd",
    "displayName": "vscode-erd",
    "description": "An extension for Visual Studio Code to preview erd(.er) files",
    "version": "0.0.1",
    "publisher": "kaishuu0123",
    "engines": {
        "vscode": "^1.19.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onCommand:erd.showPreview"
    ],
    "main": "./out/extension",
    "contributes": {
        "commands": [
            {
                "command": "erd.showPreview",
                "title": "ERD Preview",
                "category": "ERD"
            }
        ],
        "configuration": {
            "title": "ERD Preview",
            "properties": {
                "erd.erdPath": {
                    "description": "The path of the erd program.",
                    "type": [
                        "string",
                        "null"
                    ],
                    "default": null,
                    "isExecutable": true
                },
                "erd.dotPath": {
                    "description": "The path of the dot program.",
                    "type": [
                        "string",
                        "null"
                    ],
                    "default": null,
                    "isExecutable": true
                }
            }
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "npm run compile && node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "typescript": "^2.6.1",
        "vscode": "^1.1.6",
        "@types/node": "^7.0.43",
        "@types/mocha": "^2.2.42"
    }
}
